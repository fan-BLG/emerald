# Database (Required)
# Get from neon.tech or your PostgreSQL provider
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Authentication (Required)
# Generate with: openssl rand -hex 32
JWT_SECRET="your-64-character-secret-here-change-in-production-abc123xyz"

# CORS (Required)
# Your frontend URL (Vercel or localhost)
FRONTEND_URL="https://your-app.vercel.app"

# Steam (Required for login)
# Get from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY="your-steam-api-key"

# Server (Optional - Railway sets PORT automatically)
PORT=4000
HOST=0.0.0.0
NODE_ENV=production

# Redis Cache (Optional)
# Get from upstash.com
REDIS_URL="redis://default:xxx@xxx.upstash.io:6379"

# Payments - NOWPayments (Optional)
# Get from nowpayments.io
NOWPAYMENTS_API_KEY=""
NOWPAYMENTS_IPN_SECRET=""

# Payments - Waxpeer (Optional)
# Get from waxpeer.com
WAXPEER_API_KEY=""

# API URL (Optional - for payment webhooks)
API_URL="https://your-api.up.railway.app"
