{
  "name": "emerald",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:api\" \"pnpm run dev:web\"",
    "dev:web": "pnpm --filter @emerald/web dev",
    "dev:api": "pnpm --filter @emerald/api dev",
    "build": "pnpm --filter @emerald/web build && pnpm --filter @emerald/api build",
    "db:generate": "pnpm --filter @emerald/api db:generate",
    "db:migrate": "pnpm --filter @emerald/api db:migrate",
    "db:push": "pnpm --filter @emerald/api db:push",
    "db:seed": "pnpm --filter @emerald/api db:seed"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "esbuild"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
